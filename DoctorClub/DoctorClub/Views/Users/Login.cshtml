@model DoctorClub.Models.UserLoginModel
@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" href="~/Content/img/logo.ico" type="image/x-icon">
    <!-- Bootstrap CSS -->
    <link href="~/Content/assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- icon css-->
    <link href="~/Content/assets/elagent-icon/style.css" rel="stylesheet" />
    <link href="~/Content/assets/animation/animate.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <link href="~/Content/css/responsive.css" rel="stylesheet" />

    <title>Sign in</title>
</head>

<body data-scroll-animation="true">
    <div id="preloader">
        <div id="ctn-preloader" class="ctn-preloader">
            <div class="round_spinner">
                <div class="spinner"></div>
                <div class="text">
                    <img src="~/Content/img/spinner_logo.png" alt="">
                    <h4><span>DoctorClub</span></h4>
                </div>
            </div>
            <h2 class="head">Did You Know?</h2>
            <p></p>
        </div>
    </div>
    <div class="body_wrapper">
        <section class="signup_area">
            <div class="row ml-0 mr-0">
                <div class="sign_left signin_left">
                    <h2>We are design changers do what matters.</h2>
                    <img class="position-absolute top" src="~/Content/img/signup/top_ornamate.png" alt="top">
                    <img class="position-absolute bottom" src="~/Content/img/signup/bottom_ornamate.png" alt="bottom">
                    <img class="position-absolute middle" src="~/Content/img/signup/female-doctor.png" alt="bottom">
                    <div class="round"></div>
                </div>
                <div class="sign_right signup_right">
                    <div class="sign_inner signup_inner">
                        <div class="text-center">
                            <h3>Sign in to DoctorClub</h3>
                            <p>Don’t have an account yet? @Html.ActionLink("Sign up here","Register","Users")</p>
                        </div>
                            @using (Html.BeginForm("Login", "Users", FormMethod.Post, new { @class = "row login_form" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="col-lg-12 form-group">
                                    <div class="small_text">Username</div>
                                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @id = "username", @placeholder = "Dr.invisible123" } })
                                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-lg-12 form-group">
                                    <div class="small_text">Password</div>
                                    <div class="confirm_password">
                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @type = "password", @class = "form-control", @id = "confirm-password", @autocomplete = "off", @placeholder = "5+ characters required" } })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                        <a href="@Url.Action("forgoten_password","Users")" class="forget_btn">Forgotten password?</a>
                                    </div>
                                </div>

                                <div class="col-lg-12 form-group">
                                    <div class="check_box">
                                        @Html.CheckBox("remember", false, new { @id = "squared2" })
                                        <label class="l_text" for="squared2">Remember me.</label>
                                    </div>
                                </div>
                                <div class="col-lg-12 text-center">
                                    <button type="submit" class="btn action_btn thm_btn">Sign in</button>
                                </div>
                            }
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Content/js/pre-loader.js"></script>
    <script src="~/Content/assets/bootstrap/js/popper.min.js"></script>
    <script src="~/Content/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/js/parallaxie.js"></script>
    <script src="~/Content/js/TweenMax.min.js"></script>
    <script src="~/Content/assets/wow/wow.min.js"></script>
    <script src="~/Content/js/main.js"></script>
</body>

</html>