    <!-- Forum post content -->
    <div class="q-title">
        <span style="color: #0094ff;" class="question-icon" title="Question">@Html.DisplayFor(model => model.SubCategories.Name).ToString().Substring(0, 1):</span>
        <h1> @Html.DisplayFor(model => model.Title)</h1>
    </div>
    <div class="forum-post-content">
        <div class="content">
            @Html.Raw(HttpUtility.HtmlDecode(Model.Content))
        </div>
        <div class="forum-post-btm">
            <div class="taxonomy forum-post-tags">
                <i class="icon_tags_alt"></i>
                @{ var i = 0;}
                @foreach (var t in Model.PostTags)
                {
                    { i++; }
                    <a href="@Url.Action("Index","Tags",new { slug = t.Tag.Slug})" class="badge color-ass">@t.Tag.Name</a>@(i < (Model.PostTags.Count())?',':' ')
                }
            </div>
            <div class="taxonomy forum-post-cat">
                <img src="~/Content/img/forum/logo.png" alt=""><a href="@Url.Action("Forum","Home")">DoctorClub</a>
            </div>
        </div>
        <div class="comment-form-wrap pt-5">
            <h3 class="mb-5">Leave a comment</h3>
            @using (Html.BeginForm("Comments", "Comments", FormMethod.Post, new { @id = "CommentForm" }))
            {
                @Html.AntiForgeryToken()
                <input type="hidden" name="postSlug" value="@Model.Slug" />
                <input type="hidden" name="parent" value="@string.Empty" />
                <div class="form-group">
                    <textarea name="Content" id="contentCmt" rows="4" class="form-control" placeholder="Content"></textarea>
                </div>
                <div class="form-group">
                    <button class="action_btn btn_small reply-btn">Post<i class="icon_chat_alt"></i></button>
                </div>
            }
        </div>
        <div class="action-button-container action-btns">
        </div>
    </div>

    @if (Model.Comments.Count() > 0)
    {

        <!-- Best answer -->
        <div class="best-answer">
