    <!-- All answer -->
    <div class="all-answers">
        <h3 class="title">All Replies</h3>
        <div class="filter-bar d-flex">
            <div class="sort">
                <select class="custom-select" onchange="pagination('@Model.Id',1)" id="sortBy">
                    <option selected disabled>Sort By</option>
                    <option value="1">Latest</option>
                    <option value="2">Oldest</option>
                    <option value="3">Vote</option>
                </select>
            </div>
        </div>
        <div class="comment-list">
            @Html.Action("CommentListPagination", "Comments", new { postId = Model.Id, sortBy = 1 })
        </div>

    </div>
</div>
    <div class="modal fade img_modal" id="sub-comment-modal" tabindex="-3" role="dialog" aria-hidden="false" style="background-color: transparent;">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <i class=" icon_close"></i>
        </button>
        <div class="modal-dialog help_form" role="document">
            <div class="modal-content" style="background-color: #0094ff;">

                <div class="container-fluid">
                    <div class="shortcode_title">
                        <h1>Write a comment</h1>
                    </div>
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="postSlug" value="@Model.Slug" />
                    <input type="hidden" name="parent" value=" " />
                    <div class="form-group">
                        <textarea name="Content" rows="4" class="form-control" placeholder="Write your comment here"></textarea>
                    </div>
                    <div class="form-group">
                        <button type="button" onclick="postComment()" class="doc_border_btn btn_small reply-btn">Post<i class="icon_chat_alt"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @section scripts{
        <script src="~/Content/js/comments.js?v6"></script>
        <script>
            function commentChildLoad(parent) {
                $.post('/Comments/CommentChild?parentId=' + parent).always(function () {
                    $('#chil-comment-' + parent).load('/Comments/CommentChild?parentId=' + parent);
                });
            }
        </script>
    }
