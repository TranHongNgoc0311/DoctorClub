@model DoctorClub.Models.ForgotenPasswordModel
@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" href="~/Content/img/logo.ico" type="image/x-icon">
    <!-- Bootstrap CSS -->
    <link href="~/Content/assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- icon css-->
    <link href="~/Content/assets/elagent-icon/style.css" rel="stylesheet" />
    <link href="~/Content/assets/animation/animate.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <link href="~/Content/css/responsive.css" rel="stylesheet" />
    <title>DoctorClub | Change password</title>
</head>

<body data-scroll-animation="true">
    <div id="preloader">
        <div id="ctn-preloader" class="ctn-preloader">
            <div class="round_spinner">
                <div class="spinner"></div>
                <div class="text">
                    <img src="img/spinner_logo.png" alt="">
                    <h4><span>Docly</span></h4>
                </div>
            </div>
            <h2 class="head">Did You Know?</h2>
            <p></p>
        </div>
    </div>
    <div class="body_wrapper">
        <section class="signup_area">
            <div class="row ml-0 mr-0">
                <div class="sign_left signin_left">
                    <h2>all are almost done. Now change your password and login.</h2>
                    <img class="position-absolute top" src="~/Content/img/signup/top_ornamate.png" alt="top">
                    <img class="position-absolute bottom" src="~/Content/img/signup/bottom_ornamate.png" alt="bottom">
                    <img class="position-absolute middle" src="~/Content/img/signup/female-doctor.png" alt="bottom">
                    <div class="round"></div>
                </div>
                <div class="sign_right signup_right">
                    <div class="sign_inner signup_inner">
                        <div class="text-center">
                            <img src="~/Content/img/logo.png" class="img-responsive" alt="">
                        </div>
                        <div class="divider">
                            <span class="or-text"></span>
                        </div>
                        @using (Html.BeginForm("ResetPassword", "Mail", FormMethod.Post, new { @class = "row login_form" }))
                        {
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="uid" value="@ViewBag.uid" />   
                            <div class="col-lg-12 form-group">
                                <div class="small_text">Your new password</div>
                                <input type="password" name="Password" autocomplete="off" placeholder="8+ characters required" class="form-control" />
                                @Html.ValidationMessage("Password", "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-12 form-group">
                                <div class="small_text">Confirm password</div>
                                <div class="confirm_password">
                                    <input type="password" name="Confirm_password" autocomplete="off" placeholder="8+ characters required" class="form-control" />
                                    @Html.ValidationMessage("Confirm_password", "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-lg-12 text-center">
                                <button type="submit" class="doc_border_btn action_btn">Continue<i class="arrow_right"></i></button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Content/js/pre-loader.js"></script>
    <script src="~/Content/assets/bootstrap/js/popper.min.js"></script>
    <script src="~/Content/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/js/parallaxie.js"></script>
    <script src="~/Content/js/TweenMax.min.js"></script>
    <script src="~/Content/assets/wow/wow.min.js"></script>
    <script src="~/Content/js/main.js"></script>
</body>

</html>