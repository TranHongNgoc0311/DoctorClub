<section class="community-posts-area">
    <div class="container">
        <div class="section_title text-center">
            <h2 class="h_title wow fadeInUp">
                DoctorClub top topic posts
            </h2>

            <p class="wow fadeInUp" data-wow-delay="0.3s">
                I hope you will find your anwser here.!
            </p>
        </div>

        <div class="community-posts-wrapper">
            @foreach (var p in post)
            {
                <div class="community-post wow fadeInUp" data-wow-delay="0.5s">
                    <div class="post-content">
                        <div class="author-avatar">
                            <img src="~/Content/Upload/@p.User.Image" style="width:50px;height: 50px;" alt="community post">
                        </div>
                        <div class="entry-content">
                            <h3 class="post-title">
                                <a href="@Url.Action("Details","Posts",new { slug = p.Slug})">
                                   @p.Title
                                </a>
                            </h3>
                            <p>posted by: @p.Created</p>
                        </div>
                    </div>
                    <div class="post-meta-wrapper">
                        <ul class="post-meta-info">
                            <li><a href="#"><i class="fas fa-eye"></i>@p.Views</a></li>
                            <li><a href="#"><i class="icon_chat_alt"></i>@p.Comments.Count()</a></li>
                        </ul>
                    </div>
                </div>
                <!-- /.community-post -->
            }

        </div>
        <!-- /.community-posts-wrapper -->

        <div class="button-container text-center">
            <a href="@Url.Action("Forum","Home")" class="doc_border_btn btn-round border-light all_doc_btn wow fadeInUp animated">
                All sestems currently operational
                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="18px" height="11px">
                    <path fill-rule="evenodd" fill="rgb(16, 179, 214)" d="M13.034,0.006 L12.323,0.738 L15.227,4.980 L-0.000,4.981 L-0.000,6.015 L15.227,6.015 L12.323,10.258 L13.034,10.990 L18.000,5.864 L18.000,5.131 L13.034,0.006 Z" />
                </svg>
            </a>
        </div>
        <!-- /.button-container -->
    </div>
    <!-- /.container -->
</section>
<!-- /.community-posts-area -->


