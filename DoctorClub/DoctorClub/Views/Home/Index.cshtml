@{
    ViewBag.Title = "Home Page";
    var people = ViewBag.people as IEnumerable<DoctorClub.Models.DataModels.Users>;
    var topic = ViewBag.topic as IEnumerable<DoctorClub.Models.DataModels.SubCategories>;
    var category = ViewBag.category as IEnumerable<DoctorClub.Models.DataModels.Categories>;
    var post = ViewBag.post as IEnumerable<DoctorClub.Models.DataModels.Posts>;
    var comment = ViewBag.comment as IEnumerable<DoctorClub.Models.DataModels.Comments>;
    var tag = ViewBag.tags as IEnumerable<DoctorClub.Models.DataModels.Tags>;
}

<section class="docly-banner-support">
    <div class="banner-content text-center">
        <div class="banner-content-wrapper">
            <h1 class="banner-title wow fadeInUp">DoctorClub Support Communities</h1>
            <p class="banner-description wow fadeInUp" data-wow-delay="0.3s">
                Find answers, ask questions, and connect with our community of DoctorClub users<br> from around the
                world.
            </p>
            <!-- /.banner-search-form-wrapper -->
        </div>
        <!-- /.banner-content-wrapper -->
    </div>
    <!-- /.banner-content -->
    <ul class="people-image wow fadeIn" data-wow-delay="0.7s">
        @{
            var e = 0;
            for (var i = 0; i < 10; i++)
            {
                <li><img class="wow zoomIn" data-wow-delay="0.4s" src="~/Content/Upload/@people.ElementAt(i < people.Count()?i:e).Image" style="max-width: 130px;max-height: 130px;min-height: 50px;min-width:50px;" alt="people"></li>
                if (i >= people.Count())
                {
                    e++;
                }
                if (e >= people.Count())
                {
                    e = 0;
                }
            }
        }
    </ul>
    <ul class="partical-animation wow fadeIn" data-wow-delay="0.9s">
        <li class="partical">
            <img data-parallax='{"x": -180, "y": 80, "rotateY":2000}' src="~/Content/img/home_support/bnp1.png" alt="partical">
        </li>
        <li class="partical"></li>
        <li class="partical"></li>
        <li class="partical"></li>
        <li class="partical"></li>
        <li class="partical"></li>
        <li class="partical"></li>
        <li class="partical"></li>
        <li class="partical"></li>
        <li class="partical"></li>
        <li class="partical"></li>
        <li class="partical"><img src="~/Content/img/home_support/bnp2.png" data-parallax='{"x": -250, "y": -160, "rotateZ":200}' alt="partical"></li>
    </ul>
    <div class="bottom-shape">
        <img src="~/Content/img/home_support/banner-bottom-shape.png" alt="banner">
    </div>
</section>
<!-- /.docly-banner-support -->


<section class="doc_categories_guide_area sec_pad">
    <img class="shap wow fadeInUp" src="~/Content/img/home_one/dow_bg_two.png" alt="">
    <div class="container">
        <div class="section_title text-center">
            <h2 class="h_title wow fadeInUp">Check out our guide categories</h2>
            <p class="wow fadeInUp" data-wow-delay="0.2s">Some dodgy chav bevvy amongst argy-bargy spiffing absolutely bladdered nancy boy cup of tea a load of old tosh porkies.</p>
        </div>
        <div class="row">
            @{
                var count = 1;
                foreach (var cat in category)
                {
                    var img = count + ".png";
                    count++;
                    if(count > 6)
                    {
                        count = 1;
                    }
                    <div class="col-lg-4 col-sm-6">
                        <div class="categories_guide_item wow fadeInUp">
                            <img src="~/Content/img/onepage-icon/@img" alt="">
                            <div class="doc_tag_title">
                                <h4>@cat.Name</h4>
                            </div>
                            <ul class="list-unstyled tag_list">
                                @foreach (var tp in cat.SubCategories)
                                {
                                    <li><a href="@Url.Action("Index","Posts",new { slug = tp.Slug})"><i class="icon_document_alt"></i>@tp.Name</a></li>
                                }
                            </ul>
                            <a href="@Url.Action("Forum","Home")" class="doc_border_btn">More<i class="arrow_right"></i></a>
                        </div>
                    </div>
                }
            }
        </div>
        <div class="text-center">
            <a href="@Url.Action("Forum","Home")" class="doc_border_btn all_doc_btn wow fadeinUp">View All Docs<i class="arrow_right"></i></a>
        </div>
    </div>
</section>

